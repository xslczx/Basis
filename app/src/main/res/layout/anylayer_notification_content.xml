<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/anylayer_notification_bg"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:id="@+id/anylayler_notification_content_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/anylayler_notification_content_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            tools:src="@android:drawable/ic_secure"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/anylayler_notification_content_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textColor="@color/anylayer_notification_label_text_color"
            android:textSize="13sp"
            android:visibility="gone"
            tools:text="@tools:sample/full_names"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/anylayler_notification_content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/anylayer_notification_time_text_color"
            android:textSize="11sp"
            android:visibility="gone"
            tools:text="@tools:sample/date/hhmmss"
            tools:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/anylayler_notification_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/anylayer_notification_title_text_color"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="@tools:sample/lorem/random"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/anylayler_notification_content_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/anylayer_notification_desc_text_color"
        android:textSize="13sp"
        android:visibility="gone"
        tools:text="@tools:sample/lorem/random"
        tools:visibility="visible" />

</LinearLayout>